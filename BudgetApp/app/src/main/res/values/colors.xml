<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Основные Material цвета (примеры) -->
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="black">#FF000000</color>
    <color name="white">#FFFFFFFF</color>

    <!-- Цвета для приложения (доход/расход) -->
    <color name="income_color">#4CAF50</color> <!-- Зеленый для дохода -->
    <color name="expense_color">#F44336</color> <!-- Красный для расхода -->

    <!-- Явные цвета для светлой темы (если нужны где-то напрямую) -->
    <color name="app_background_light">#FFFBFE</color> <!-- Чуть отличный от белого фон -->
    <color name="app_surface_light">#FFFBFE</color>    <!-- Поверхности (карточки) могут быть такими же -->
    <color name="app_text_primary_light">#1C1B1F</color>  <!-- Темный текст -->
    <color name="app_text_secondary_light">#49454F</color> <!-- Серый текст -->
    <color name="app_on_primary_light">@color/white</color> <!-- Текст на основной кнопке/тулбаре -->
    <color name="app_on_secondary_light">@color/white</color> <!-- Текст на вторичных элементах -->

    <!-- Основные цвета темы Material 3 для СВЕТЛОЙ темы -->
    <!-- Эти имена используются в атрибутах темы (?attr/colorPrimary, ?attr/colorSurface и т.д.) -->
    <color name="colorPrimaryLight">@color/purple_500</color>
    <color name="colorPrimaryVariantLight">@color/purple_700</color>
    <color name="colorSecondaryLight">@color/teal_200</color>
    <color name="colorSecondaryVariantLight">@color/teal_700</color>
    <color name="colorOnPrimaryLight">@color/app_on_primary_light</color>
    <color name="colorOnSecondaryLight">@color/app_on_secondary_light</color>
    <color name="colorSurfaceLight">@color/app_surface_light</color>
    <color name="colorOnSurfaceLight">@color/app_text_primary_light</color>
    <color name="colorBackgroundLight">@color/app_background_light</color>
    <color name="colorOnBackgroundLight">@color/app_text_primary_light</color>
    <color name="colorErrorLight">#B00020</color>
    <color name="colorOnErrorLight">@color/white</color>
    <color name="colorOutlineLight">#79747E</color>

</resources>